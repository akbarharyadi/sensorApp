          %a#menu-toggle.btn.btn-default{:href => "#menu-toggle"}
            %em.fa.fa-bars
          %ul.nav.nav-pills.flex-column.sidebar-nav
            %li.nav-item
              %a.nav-link.active{:href => "index.html"}
                %em.fa.fa-dashboard
                Dashboard
                %span.sr-only (current)
            %li.nav-item
              %a.nav-link{:href => "elements.html"}
                %em.fa.fa-bar-chart
                Measurements (History)
        %main.col-xs-12.col-sm-8.offset-sm-4.col-lg-9.offset-lg-3.col-xl-10.offset-xl-2.pt-3.pl-4
          %header.page-header.row.justify-center
            .col-md-6.col-lg-8
              %h1.float-left.text-center.text-md-left Dashboard
            .col-md-6.col-lg-4.text-center.text-md-right
            .clear
          %section.row
            .col-sm-12
              %section.row
                = yield
              %section.row
                .col-12.mt-1.mb-4
                  Template by
                  %a{:href => "https://www.medialoot.com"} Medialoot